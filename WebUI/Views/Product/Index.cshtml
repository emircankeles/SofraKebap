@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}

<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Ürün İşlemleri</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Ürün Listesi</div>
                        </div>
                        <div class="card-body">
                            <div class="card-sub">
                                Ürün ile işlemleri aşağıdan gerçekleştirebilirsiniz.
                            </div>
                            <table class="table mt-3">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Ürün Adı</th>
                                        <th scope="col">Fiyat</th>
                                        <th scope="col">Kategori</th>
                                        <th scope="col">Durum</th>
                                        <th scope="col">Sil</th>
                                        <th scope="col">Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ProductId</td>
                                            <td>@item.ProductName</td>
                                            <td>@item.Price</td>
                                            <td>@item.Name</td>
                                            <td>@item.ProductStatus</td>
                                            <td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-outline-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Product/CreateProduct/" class="btn btn-outline-primary">Yeni Ürün</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


