@model WebUI.Dtos.BookingDtos.UpdateBookingDto
@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Rezervasyon İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Rezervasyon Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="BookingID" />
                            <div class="form-group">
                                <label for="Name">Müşteri Adını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Name" id="Name">
                            </div>
                            <div class="form-group">
                                <label for="Mail">E-mail Giriniz</label>
                                <input type="email" class="form-control" asp-for="Mail" id="Mail">
                            </div>
                            <div class="form-group">
                                <label for="PhoneNumber">Telefon Numarası Giriniz</label>
                                <input type="text" class="form-control" asp-for="PhoneNumber" id="PhoneNumber">
                            </div>
                            <div class="form-group">
                                <label for="PersonCount">Kişi Sayısı Giriniz</label>
                                <input type="number" class="form-control" asp-for="PersonCount" id="PersonCount">
                            </div>
                            <div class="form-group">
                                <label for="BookingTime">Tarih Bilgisi Giriniz</label>
                                <input type="date" class="form-control" asp-for="BookingTime" id="BookingTime">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Kategoriyi Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

